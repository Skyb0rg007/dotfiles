
# Basic settings
[user]
	name = Skye Soss
	email = skye@soss.website
[init]
	defaultBranch = main
[diff]
	tool = vimdiff
[difftool]
	prompt = false

# Code signing
[user]
	signingKey = ~/.config/ssh/id_ed25519.pub
[commit]
	gpgsign = true
[push]
	# Signed pushes are cool but not supported by GitHub
	gpgsign = false
[tag]
	gpgsign = true
[core]
	sshCommand = ssh
[gpg]
	format = ssh
[gpg "ssh"]
	program = ssh-keygen
	allowedSignersFile = ~/.config/ssh/allowed_signers
	revocationFile = ~/.config/ssh/revoked

